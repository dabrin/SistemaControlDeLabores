@{
    ViewBag.Title = "GestionProcesos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GestionProcesos</h2>

<div class="container">

    <table class="striped">
        <thead>
            <tr>
                <th>Nombre de proceso</th>
                <th>Renombrar</th>
                <th>Gestionar</th>
            </tr>
        </thead>

        <tbody>
            @for (int i = 1; i <= 3; i = i + 1)
            {

                <tr>
                    <td>Proceso @i</td>
                    <td> <a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a></td>
                    <td><a class="waves-effect waves-light btn">Gestionar</a></td>
                    <td> <a class="waves-effect waves-light btn">Eliminar</a></td>
                </tr>
            }
        </tbody>
    </table>


    <div class="row">
        <div class="col s3">
            <input type="text" placeholder="Nombre proceso">
        </div>
        <div class="col s3">
            <input type="text" placeholder="Descripción del proceso" />
        </div>
                    
        <div class="col s6">
            <a class="waves-effect waves-light btn"> Crear</a>

        </div>

    </div>

</div>