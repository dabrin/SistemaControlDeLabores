
@{
    ViewBag.Title = "GestionSubprocesos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestion Subprocesos</h2>


<div class="container">
    <h3>Nombre del proceso </h3>
    <div class="row">


        <div class="col m6">
            <table class="striped">
                <thead>
                    <tr>
                        <th>Nombre de Subproceso</th>
                        <th>Descripcion</th>
                        <th>Opcion</th>

                    </tr>
                </thead>

                <tbody>
                    @for (int i = 1; i <= 3; i = i + 1)
                    {

                        <tr>
                            <td>Subproceso @i</td>
                            <td>Proceso @i</td>
                            <td> <a class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">X</i></a></td>

                        </tr>
                    }
                </tbody>
            </table>
            
        </div>
        <div class="col m6">
            <h5>Añadir subprocesos</h5>
            <input type="text" placeholder="Nombre subproceso">
            <input type="text" placeholder="Descripcion del subproceso">
            <a class="waves-effect waves-light btn"> Crear</a>
        </div>
    </div>

</div>